#!/bin/bash

source $root_dir/system_files/bin/sys_bin/error_report.sh
source $root_dir/system_files/bin/sys_bin/get_dir.sh
destination_dir=""
echo "where to?"
list="$(./system_files/bin/list)"
echo "$list"
#IFS='\n'
#read -ra ADDR <<< "$list"
read user_choice
valid_choice=0
for i in $list; do
	if [[ "$i" == "$user_choice" ]]; then
		valid_choice=$((valid_choice + 1))
		echo -n "$(pwd)/$user_choice" > "$root_dir/system_files/bin/sys_bin/.current_dir"
		cd "$user_choice"
	fi
done
if ((valid_choice == 0)); then
	echo "$user_choice: Not a directory!"
fi
