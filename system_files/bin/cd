#!/bin/bash

# this will check if the user has permission to see the directory contents before allowing them to change into the directory specified.
# In the backend, this runs:
# $ cd [path/to/dir]

while getopts :h: option; do
	echo "inside parsing getopts..."
	case ${option} in
		[h\?]) 	echo "Usage: cd [path/to/directory]"
				echo "            or"
				echo "       cd [directory]"
		  ;;
	esac
done